{
	"scripts": {
		"build": "mkdirp build && run-p build:**",
		"build:css": "postcss src/index.css -o dist/index.css",
		"build:pages": "./build/index.js",
		"watch": "watch 'npm run build' 'src'"
	},
	"eslintConfig": {
		"extends": "@little-bonsai"
	},
	"prettier": {
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"printWidth": 100,
		"overrides": [
			{
				"files": ["**/*.md"],
				"options": {
					"printWidth": 60,
					"useTabs": false,
					"tabWidth": 2
				}
			}
		]
	},
	"devDependencies": {
		"@little-bonsai/eslint-config": "0.1.0",
		"eslint": "^7.32.0",
		"marked": "^2.1.3",
		"mkdirp": "^1.0.4",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.3.6",
		"postcss-cli": "^8.3.1",
		"prettier": "^2.3.2",
		"tailwindcss": "^2.2.7"
	}
}
